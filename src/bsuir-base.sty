\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{bsuir-base}[2025/12/28 Base settings]

% --- Геометрия (ГОСТ 7.32 / STP) ---
% Left=30mm, Right=15mm, Top=20mm, Bottom=20mm
\RequirePackage[
  left=30mm, right=15mm, top=20mm, bottom=20mm,
  footskip=10mm, % Номер страницы в 10мм от края (по STP)
  showframe=false % Поставь true для отладки полей
]{geometry}

% --- Шрифты (LuaLaTeX/XeLaTeX) ---
\RequirePackage{fontspec}
\defaultfontfeatures{Ligatures=TeX, Renderer=Basic} % Renderer=Basic часто лучше для Times

\setmainfont{Times New Roman}[
  Script=Cyrillic,
  Scale=1.0
]
% Если нужны sans/mono шрифты, раскомментируй и настрой:
% \setsansfont{Arial} 
% \setmonofont{Courier New}[Scale=MatchLowercase]

% --- Интерлиньяж и отступы ---
\RequirePackage{setspace}
\setstretch{1.0} % Одинарный интервал (STP 1.2)
% Но часто требуют множитель 1.08-1.15 для визуального соответствия Word 1.0
% Если нормоконтроль придерется к плотности, ставь \setstretch{1.15}

\RequirePackage{indentfirst} % Абзацный отступ у первого абзаца
\setlength{\parindent}{1.25cm} % Ровно 1.25 см
\setlength{\parskip}{0pt}      % Между абзацами нет отступа

% --- Микротипографика ---
\RequirePackage[babel=true]{microtype}

