\RequirePackage{graphicx}
\RequirePackage{svg} % Если используешь SVG (требует Inkscape)
\RequirePackage{caption}

% Checklist §5.2: Иллюстрацию располагают по центру и отделяют от текста и подрисуночной подписи одной пробельной строкой
% До картинки пустая строка, между картинкой и подписью пустая строка, после подписи пустая строка
\setlength{\intextsep}{\baselineskip} % Пробельная строка до и после рисунка
\captionsetup[figure]{
  format=plain,
  labelsep=endash, % Тире между "Рисунок X" и названием
  justification=centering, % По центру
  skip=\baselineskip, % Пробельная строка между рисунком и подписью
  position=below
}

