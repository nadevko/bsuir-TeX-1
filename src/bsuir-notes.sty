% Настройка сносок через KOMA-Script
% Знаки сноски: арабские цифры со скобкой
\deffootnote[1em]{1em}{1em}{\textsuperscript{\thefootnotemark)}}

% Размещение сносок: внизу страницы под короткой чертой
% (настраивается автоматически через KOMA-Script)

% Текст пояснения: с абзацного отступа
\deffootnote[1.25cm]{1em}{1em}{\textsuperscript{\thefootnotemark)}}

% В пояснительной сноске каждая запись стартует с абзацного отступа
% и uppercase маленького, сверху номера сноски в круглой скобке
\deffootnote[1.25cm]{1em}{1em}{%
  \textsuperscript{\thefootnotemark)}%
  \MakeLowercase
}

% Примечания
% Слово "Примечание" пишется с прописной буквы с абзаца
\newcommand{\note}[1]{%
  \par\noindent
  \textbf{Примечание} --- #1%
}

% Если примечание одно, то после слова "Примечание" ставится тире
% и размещается текст пояснения, начиная с прописной буквы
% (реализовано выше)

% Если примечаний несколько, то производится нумерация по порядку арабскими цифрами
\newcounter{notecounter}
\newcommand{\notelist}{%
  \setcounter{notecounter}{0}%
}

\newcommand{\noteitem}[1]{%
  \stepcounter{notecounter}%
  \par\noindent
  \textbf{Примечание} \arabic{notecounter} --- #1%
}

% Примечание к таблице: в конце таблицы над нижней ограничивающей чертой
% (обрабатывается вручную в документе)

% Окружение для примечаний
\newenvironment{notes}{%
  \setcounter{notecounter}{0}%
  \par\noindent
}{%
  \par
}

% Команда для одного примечания
\renewcommand{\note}[1]{%
  \par\noindent
  \textbf{Примечание} --- #1%
}

% Команда для нескольких примечаний
\newenvironment{noteslist}{%
  \setcounter{notecounter}{0}%
  \par\noindent
}{%
  \par
}

\newcommand{\noteitem}[1]{%
  \stepcounter{notecounter}%
  \par\noindent
  \textbf{Примечание} \arabic{notecounter} --- #1%
}

