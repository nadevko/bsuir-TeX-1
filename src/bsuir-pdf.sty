\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{bsuir-pdf}[2025/12/28 External PDF support]

\RequirePackage{pdfpages}

% Вставка PDF без номера страницы (для титульника или задания)
% \insertpdf[pages=-]{file.pdf}
\NewDocumentCommand{\insertpdf}{O{} m}{
  \includepdf[pages=-, #1]{#2}
}

% Вставка с сохранением нумерации сквозной (если нужно)
\NewDocumentCommand{\insertpdfnumbered}{O{} m}{
  \includepdf[pages=-, pagecommand={\thispagestyle{plain}}, #1]{#2}
}

