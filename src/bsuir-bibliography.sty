\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{bsuir-bibliography}[2025/12/28 Bibliography]

\RequirePackage{csquotes}
\RequirePackage[
  backend=biber,
  style=gost-numeric, % ГОСТ 7.1-2003 через стиль numeric
  sorting=none,       % По порядку упоминания (Checklist §8.3)
  language=auto,      % Автоопределение языка источника
  autolang=other,
  movenames=false,    % Не двигать имена
  maxnames=5          % "и др" после 5 авторов
]{biblatex}

% Разделитель тире в библиографии (ГОСТ 2003)
% gost-standard уже включен через style=gost-numeric

% Заголовок списка литературы (Checklist §8.1)
\DefineBibliographyStrings{russian}{
  bibliography = {СПИСОК ИСПОЛЬЗОВАННЫХ ИСТОЧНИКОВ}
}

% Маппинг белорусского языка на русский для biblatex
% (biblatex не имеет полной поддержки belarusian, используем русские термины)
\DeclareLanguageMapping{belarusian}{russian}

% Используем anonsection для заголовка (по центру, прописными)
\defbibheading{bsuir}[\bibname]{%
  \anonsection{#1}%
}

